{
  "manifest_version": 3,
  "name": "知乎表情包替换：[惊喜] → [可怜]",
  "version": "1.0",
  "description": "将知乎的 [惊喜] 表情自动替换为 [可怜] 表情。",
  "author": "joelovechen",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.zhihu.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}